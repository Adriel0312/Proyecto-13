<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <ImageView
                android:id="@+id/imagenPerfil"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:srcCompat="@drawable/ic_profile" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Nombre: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/correoE"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Correo: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Teléfono: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/alternativo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Alternativo:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/fechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Fecha Nacimiento:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/provincia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Provincia: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/canton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cantón: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/distrito"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Distrito: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botonNavegacion"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/cardview_dark_background"
        app:itemIconTint="@color/nav_button"
        app:itemTextColor="@color/nav_button"
        app:menu="@menu/main_menu"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>